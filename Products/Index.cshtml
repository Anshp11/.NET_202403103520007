@model IEnumerable<OnlineProductManagementSystem.Models.Product>

<h2>Products</h2>
<p><a href="/Products/Create">Create New Product</a></p>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Price</td>
        <td>@item.Quantity</td>
        <td>
            <a href="/Products/Edit/@item.Id">Edit</a> |
            <a href="/Products/Delete/@item.Id">Delete</a>
        </td>
    </tr>
}
</table>
